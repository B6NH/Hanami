<h2>All Songs</h2>

<% if songs.any? %>
  <div id="songs">

    <ul>
      <% songs.each do |song| %>
        <div class="singer">
          <li><%= song.title %></li>
        </div>
      <% end %>
    </ul>

    <nav>
      <a href="<%= previous_page_path(:songs)%>">Previous</a>
      <a href="<%= next_page_path(:songs)%>">Next</a>
    </nav>

  </div>
<% else %>
  <p class="placeholder">There are no songs yet.</p>
<% end %>

<br>

<%= link_to 'New Song', routes.new_song_path %>
