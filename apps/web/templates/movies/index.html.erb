<h2>All Movies</h2>

<% if movies.any? %>
  <div id="movies">

    <ul>
      <% movies.each do |movie| %>
        <div class="movie">
          <li>

            <%= link_to movie.title,
                routes.movy_path(movie.id) %>
          </li>
        </div>
      <% end %>
    </ul>

  </div>
<% else %>
  <p class="placeholder">There are no movies yet.</p>
<% end %>
<a href="/movies/new">New movie</a>
