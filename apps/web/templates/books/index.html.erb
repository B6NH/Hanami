<h2>All Books</h2>

<% if books.any? %>
  <div id="books">
    <ul>
      <% books.each do |book| %>
        <div class="book">
            <li>
              <%= book.title %>
            </li>
        </div>
      <% end %>
    </ul>
  </div>
<% else %>
  <p class="placeholder">There are no books yet.</p>
<% end %>
<a href="/books/new">New book</a>
